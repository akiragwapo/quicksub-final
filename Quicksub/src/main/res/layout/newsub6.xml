                    android:drawableLeft="@drawable/honeymustard"
                    android:drawablePadding="5dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="20dp"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condiments5"
                    android:id="@+id/checkbox_condiments5"
                    android:onClick="onCheckboxClicked"
                    android:drawableLeft="@drawable/mayo"
                    android:drawablePadding="5dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="20dp"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condiments6"
                    android:id="@+id/checkbox_condiments6"
                    android:onClick="onCheckboxClicked"
                    android:drawableLeft="@drawable/mayo"
                    android:drawablePadding="5dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="20dp"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condiments7"
                    android:id="@+id/checkbox_condiments7"
